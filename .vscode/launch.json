    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit UI",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "ui.py"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Flask API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/api/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/api",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "PORT": "5000"
            },
            "justMyCode": true
        }
    ]
}